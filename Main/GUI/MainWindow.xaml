        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Formula 1 Car Creator (unofficial)" Height="549" Width="800">
    <Grid Margin="0,0,0,-16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="ContentControl" Content="RaceCarControl" HorizontalAlignment="Center" Height="440" VerticalAlignment="Center" Width="780"/>
        <Button x:Name="ButtonCarList" Content="GARAGE" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Click="ButtonCarList_Click" FontWeight="Bold"/>
    </Grid>
</Window>
