<UserControl x:Class="Main.DamagedCarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Main"
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="780"
             Background="White">
    <Grid>
        <ComboBox x:Name="ComboBoxTyres" HorizontalAlignment="Left" Height="25" Margin="27,251,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="TextBoxNumber" HorizontalAlignment="Left" Height="25" Margin="27,80,0,0" TextWrapping="Wrap" Text="Number" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="TextBoxType" HorizontalAlignment="Left" Height="25" Margin="27,110,0,0" TextWrapping="Wrap" Text="Num" VerticalAlignment="Top" Width="30"/>
        <ComboBox x:Name="ComboBoxEngine" HorizontalAlignment="Left" Height="25" Margin="132,251,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="ComboBoxAerodynamics" HorizontalAlignment="Left" Height="25" Margin="237,251,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="TextBoxBrakes" HorizontalAlignment="Left" Height="24" Margin="27,0,0,0" TextWrapping="Wrap" Text="Brakes" VerticalAlignment="Center" Width="100"/>
        <Button x:Name="ButtonBuild" Content="BUILD" HorizontalAlignment="Center" Height="40" Margin="0,390,0,0" VerticalAlignment="Top" Width="80" Click="ButtonBuild_Click"/>

    </Grid>
</UserControl>
